<!DOCTYPE html>
<html lang="en">
<head>
  <script src="http://tristanedwards.me/u/SweetAlert/lib/sweet-alert.js"></script>
  <link href="http://tristanedwards.me/u/SweetAlert/lib/sweet-alert.css" rel="stylesheet" />
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
  <script src="http://code.jquery.com/jquery-1.6.2.min.js"></script>
  <script src="/news.js"></script>
  <style type="text/css">
    .ml-6 {
      padding-left: 3em;
    }
    .btnright{
      margin-top: 1.5em;
      margin-right: 1px;
       float: right;
    }
  </style>
  <style>
    .alignclass{
     margin-left: 11%;
    
     }
    </style>

  
</head>
<% include /base.ejs%>
<body>
    <div class="formspacing">
      <form>
        <div class="widget">
          <div class="widget-heading">
            <h3 class="widget-title">News</h3>
          </div>
          <div class="widget-body">

            <div class="row">
              <div class="col-md-8">
                <div class="form-group">
                  <label for="txtMovieTitle">News title</label>
                  <input id="news_title" type="text" class="form-control">
                </div>
              </div>
              <div class="col-md-4">
                <div class="form-group">
                  <label>News date</label>
                  <div class="input-group ">
                    <input type="text" id="news_date" class="form-control date">
                    <span class="input-group-addon">
                      <span class="ti-calendar"></span>
                    </span>
                  </div>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-lg-12">
                <div class="form-group">
                  <label for="txtReview">News description</label>
                  <textarea id="news_description" name="review" rows="8" class="form-control"></textarea>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="form-group">
                <label class="col-sm-2 control-label">Images</label>
                <div class="col-sm-12">
                  <input id="input-14" name="input14[]" type="file" multiple="" class="file-loading">

                </div>

              </div>
            </div>
           <div class="row">
            <div class="col-md-12">
                <button type="submit" id="sumbitbutton" class="btn btn-outline btn-success btnright">Submit</button>
            </div>
            </div>
            </div>
        </div>
      </form>
      <div class="widget-body">
        <table id="newsDatatable" cellspacing="0" width="100%" class="table table-striped table-bordered">
          <thead>
            <tr>
              <th class="text-center">News Id</th>
              <th class="text-center">News Title</th>
              <th class="text-center">News Description</th>
              <th class="text-center">News Date</th>
              <th class="text-center">Action</th>
            </tr>
          </thead>
          <tbody>
          </tbody>
        </table>
      </div>
    </div>
    </form>
  </body>
</html>